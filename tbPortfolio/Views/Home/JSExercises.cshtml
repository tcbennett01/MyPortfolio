        <!-- BEGIN - NUMBER STATS -->
        <div class="row js-row" id="numStatsRow">
            <h3 class="heading text-center">NUMBER STATISTICS</h3><br>

            <!-- Description -->
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <p>Enter 5 numbers below and click 'Submit'. The program will print the least, greatest, mean, sum, and
                        product of all numbers entered by the user.
                    </p><br>
                </div>
                <div class="col-md-1"></div>
            </div>

            <div class="col-md-2"></div> <!-- Spacer - future use -->
            <div class="col-md-4">
                <form id="formInput">
                    <label>Number 1: </label> <input class="numberInput text-center" type="number" id="numInput1" /><br />
                    <label>Number 2: </label> <input class="numberInput text-center" type="number" id="numInput2" /><br />
                    <label>Number 3: </label> <input class="numberInput text-center" type="number" id="numInput3" /><br />
                    <label>Number 4: </label> <input class="numberInput text-center" type="number" id="numInput4" /><br / >
                    <label>Number 5: </label> <input class="numberInput text-center" type="number" id="numInput5" /><br /><br />
                </form>
                <div>
                    <button class="btn btn-primary myBtnWidth" id="numGameSubmit">Submit</button>
                    <button class="btn btn-primary myBtnWidth" id="numGameReset">Reset</button>
                    <a href="" class="btn btn-primary myBtnWidth" data-toggle="modal" data-target="#numStat">Code</a>
                    <br /><br />
                </div>
            </div>
            <div class="col-md-1"></div> <!-- Spacer - future use -->
            <div class="col-md-3">
                <div id="numsOutput"></div> <!-- Blank div for output -->
            </div>

            <!-- Modal:  Number Stats Code -->
            <div class="modal fade" id="numStat" tabindex="-1" role="dialog" ">
                <div class="modal-dialog modal-md modalOverride">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close modalClose" data-dismiss="modal">X</button>
                            <h3 class="modal-title text-center">CODE: NUMBER STATISTICS</h3>
                        </div>
                        <div class="modal-body col-md-12">
                            <pre class="prettyprint linenums">
$("#numGameSubmit").click(function(){
    var num1 = parseFloat($("#numInput1").val());
    var num2 = parseFloat($("#numInput2").val());
    var num3 = parseFloat($("#numInput3").val());
    var num4 = parseFloat($("#numInput4").val());
    var num5 = parseFloat($("#numInput5").val());
    var minNum = Number(Math.min(num1,num2, num3, num4, num5));
    var maxNum = Number(Math.max(num1,num2, num3, num4, num5));
    var sumNum = Number(num1 + num2 + num3 + num4 + num5);
    var meanNum = Number(sumNum / 5);
    var prodNum = Number(num1 * num2 * num3 * num4 * num5);
    // Statistics Output
    $("#numsOutput").append("&lt;p&gt;Lowest: " + minNum + "&lt;/p&gt;");
    $("#numsOutput").append("&lt;p&gt;Greatest: " + maxNum + "&lt;/p&gt;");
    $("#numsOutput").append("&lt;p&gt;Mean: " + meanNum + "&lt;/p&gt;");
    $("#numsOutput").append("&lt;p&gt;Sum: " + sumNum+ "&lt;/p&gt;");
    $("#numsOutput").append("&lt;p&gt;Product: " + prodNum + "&lt;/p&gt;");
});
              </pre>
                        </div>
                        <div class="modal-footer no-margin">
                        </div>
                    </div>
                </div>
            </div> <!-- End Modal -->
        </div>
