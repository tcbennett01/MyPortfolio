    <div class="container">
        <br />
        <h2 class="text-center heading pageTitle  ">JAVASCRIPT EXERCISES</h2><br />

        <!-- JS Exercise - Button Group -->
        <div class="row text-center">
            <div class="col-md-12">
            <div class="btn-group">
                <button type="button" class="btn btn-primary jsBtnSelect" id="displayStatsBtn">Number Stats</button>
                <button type="button" class="btn btn-primary jsBtnSelect" id="displayFactorialBtn">Factorial</button>
                <button type="button" class="btn btn-primary jsBtnSelect" id="displayFizzBtn">Fizz Buzz</button>
